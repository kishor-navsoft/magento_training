<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="biswajit" translate="label" sortOrder="100">
            <label>Biswajit</label>
        </tab>
        <section id="biswajit_orders" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
        	<class>separator-top</class>
            <label>Pending Orders</label>
            <tab>biswajit</tab>
            <resource>Biswajit_HidePendingOrders::hide_pending_orders</resource>
            <group id="pending_orders" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <field id="orders_visibility" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Visibility</label>
                    <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
